<!DOCTYPE html>
@inject CompanyWebSiteCore.Resources.LocalizationService _localizer
<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
<head>

    <style>
        .topnav {
            background-color: #333;
            overflow: hidden;
        }

            /* Style the links inside the navigation bar */
            .topnav a {
               /* float: left;*/
                color: #f2f2f2;
                text-align: center;
               /* padding: 14px 16px;*/
                text-decoration: none;
                font-size: 17px;
            }

                /* Change the color of links on hover */
                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                /* Add a color to the active/current link */
                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }


        .navbar-light .navbar-dark {
            color: #FFFFFF;
        }

        .navbar-dark .navbar-nav .active > .nav-link, .navbar-dark .navbar-nav .nav-link.active, .navbar-dark .navbar-nav .nav-link.show, .navbar-dark .navbar-nav .show > .nav-link {
            color: #FFFFFF;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #FFFFFF;
        }

            .navbar-dark .navbar-nav .nav-link:focus, .navbar-dark .navbar-nav .nav-link:hover {
                color: #ccc !important;
            }
        .nav-item a {
            color: white !important;
            font-size: 1.3em !important;
            font-family: "Six Caps";
            font-weight:bold;
        }
        

    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyWebSiteCore</title>
    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    }
    else
    {
        <link href="~/bootstrap-4.3.1-rtl/dist/css/rtl/bootstrap.css" rel="stylesheet" />

    }

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
   
    <header class="fixed-top">        

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <img id="ConpanyLogo" src="" style="height: 60px; width: 60px;" class="img-thumbnail" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CompanyData" asp-action="Index">@_localizer.GetLocalizedHtmlString("CompanyDataBtn") |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ServicesData" asp-action="Index">@_localizer.GetLocalizedHtmlString("ServeciesBtn") |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductsData" asp-action="Index">@_localizer.GetLocalizedHtmlString("ProductsBtn") |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CustomersData" asp-action="Index">@_localizer.GetLocalizedHtmlString("CustomersBtn") |</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CompanyData" asp-action="Index">العملاء</a>
                        </li>*@

                    </ul>
                    <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">User</a>

                        </li>
                        <li class="nav-item">
                            @await Html.PartialAsync("_SetLanguagePartial")
                        </li>

                    </ul>                
                </div>
               

                </div>
</nav>
    </header>
    <div class="container" style="margin-top:80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CompanyWebSiteCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    }
    else
    {
        <script src="~/bootstrap-4.3.1-rtl/dist/js/bootstrap.bundle.min.js"></script>
    }
    @RenderSection("Scripts", required: false)
</body>


</html>
<script>
        $(document).ready(function () {

            $.ajax({
                url: '/CompanyData/GetConpanyLogo',
                type: 'GET',
                success: function (data) {
                    debugger
                    $("#ConpanyLogo").attr("src", "/CompanyImages/" + data.LogoImage);
                },


            });
        });

</script>

