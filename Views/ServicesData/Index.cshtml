@model IEnumerable<CompanyWebSiteCore.ModelsView.ServicesDataModelView>

@{
    ViewData["Title"] = "الخدمات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>الخدمات</h1>

<p>
    <a asp-action="Create">جديد</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceTitleDescreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceTitleDescreptionEn)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ServiceDescreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDescreptionEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceIcon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceNameEn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ServiceTitleDescreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceTitleDescreptionEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDescreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDescreptionEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceIcon)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.id }) |
                @Html.ActionLink("حذف", "Delete", new { id=item.id})
            </td>
        </tr>
}
    </tbody>
</table>
