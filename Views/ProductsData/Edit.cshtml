@model CompanyWebSiteCore.ModelsView.ProductsDataModelView

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<h4>تعديل خدمة</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductNameEn" class="control-label"></label>
                <input asp-for="ProductNameEn" class="form-control" />
                <span asp-validation-for="ProductNameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescreption" class="control-label"></label>
                <input asp-for="ProductDescreption" class="form-control" />
                <span asp-validation-for="ProductDescreption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescreptionEn" class="control-label"></label>
                <input asp-for="ProductDescreptionEn" class="form-control" />
                <span asp-validation-for="ProductDescreptionEn" class="text-danger"></span>
            </div>
          
        <div class="form-group">
            <label asp-for="Companyid" class="control-label"></label>
            <select class="selectpicker form-control" asp-for="Companyid" asp-items="Model.Companys"></select>
            <span asp-validation-for="Companyid" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="ProductImg" class="control-label font-weight-bold"></label>
                <input type="file" name="ProductImg" asp-for="ProductImg" class="form-control" />
                <span asp-validation-for="ProductImg" class="text-danger"></span>
                <img src="~/ProductImages/@Model.ProductImgName" style="height:60px; width: 60px;" class="img-thumbnail" />
            </div>



            <div class="form-group" hidden>
                
                <input name="ProductImgName" asp-for="ProductImgName" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">رجوع</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
